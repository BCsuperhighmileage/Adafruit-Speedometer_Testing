#include <WiFi.h>
#include <ESPAsyncWebServer.h>

const char *ssid = "ESP32-Access-Point";
const char *password = "password";

AsyncWebServer server(80);

int messageCounter = 0;
String constantData;

void setup() {
  Serial.begin(115200);

  // Create an Access Point
  WiFi.softAP(ssid, password);

  Serial.println("Access Point Started");
  Serial.print("IP Address: ");
  Serial.println(WiFi.softAPIP());

  // Handle root URL request
  server.on("/", HTTP_GET, [](AsyncWebServerRequest *request){
    String message = "Hello World #" + String(messageCounter++);
    request->send(200, "text/plain", message);
  });

  // Handle /constant URL request
  server.on("/constant", HTTP_GET, [](AsyncWebServerRequest *request){
    String message = "Constant Data #" + String(messageCounter++);
    constantData = message;  // Update global variable
    request->send(200, "text/plain", constantData);
  });

  // Start server
  server.begin();
}

void loop() {
  // You can leave the loop function empty or use it for other non-blocking tasks
}

