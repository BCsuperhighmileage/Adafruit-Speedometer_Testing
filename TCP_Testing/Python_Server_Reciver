import requests
import time

# Replace with the actual IP address assigned to your ESP32
esp32_ip = "192.168.4.1"

while True:
    url = f"http://{esp32_ip}/"
    response = requests.get(url)

    if response.status_code == 200:
        print(f"Received data from ESP32: {response.text}")
        # Process the received data or trigger your desired actions here
    else:
        print(f"Failed to connect to ESP32. Status code: {response.status_code}")

    time.sleep(.1)  # Adjust the delay according to your needs
